

<div class="searchInputs">
    <% if(queryData.tripType === 'oneway') { %>

        <p>TripType: <%= queryData.tripType %> | From: <%= queryData.originLocationCode %> | To: <%= queryData.destinationLocationCode %> | Depart: <%= queryData.departureDate %> | Cabin Class: <%= queryData.travelClass %> | Adults: <%= queryData.adults %> | Children: <%= queryData.children %> | Infants: <%= queryData.infants %> </p>
    <% } else if(queryData.tripType === 'return') { %> 
        <p>TripType: <%= queryData.tripType %> | From: <%= queryData.originLocationCode %> | To: <%= queryData.destinationLocationCode %> | Depart: <%= queryData.departureDate %> | Return: <%= queryData.returnDate %> | Cabin Class: <%= queryData.travelClass %> | Adults: <%= queryData.adults %> | Children: <%= queryData.children %> | Infants: <%= queryData.infants %> </p>
    <% } %> 
    <a href="/">Modify</a>
</div>

<h2>Search Results </h2>

<div class="searchResults">
        <% resultData.forEach(result => { %>
        <div class="eachSearchResults">
            <% let carrierCode = result.itineraries[0].segments[0].carrierCode %> 
            <p><img src="../airlineTails/<%= carrierCode %>.png" > | Boeing: <%= result.itineraries[0].segments[0].aircraft.code %> </p>
            <p>Stops: <%= result.itineraries[0].segments[0].numberOfStops %> </p>
            <p>Checked Bags: <%= result.travelerPricings[0].fareDetailsBySegment[0].includedCheckedBags.quantity %></p>

            <% result.itineraries[0].segments.forEach(segment=> { %>

                <p><%= segment.departure.iataCode %>|Terminal:<%= segment.departure.terminal %> ===> <%= segment.arrival.iataCode %>|Terminal:<%= segment.arrival.terminal %>   </p>

                <p> Departure: <%= segment.departure.at.slice(0,10) %> at <%= segment.departure.at.slice(-8) %> || Arrival: <%= segment.arrival.at.slice(0,10) %> at <%= segment.arrival.at.slice(-8) %> </p>
            <% }) %> 


            
            <p>Travel Time: <%= result.itineraries[0].duration.slice(2) %></p>
            <h3>Price: $<%= result.travelerPricings[0].price.total %> </h3>
            
        </div>
    
 <% }); %>
</div>